<launch>
  <!-- Start odometer node -->
  <node pkg="first_project" type="odometer" name="odometer" output="screen" />

  <!-- RViz con configurazione custom -->
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find first_project)/rviz/view_config_odometer_test.rviz" />

  <!-- Path to the bag file using a relative path from catkin_ws -->
  <arg name="bag_file" default="../data/project.bag" />

  <!-- Play the rosbag file with simulated time -->
  <node pkg="rosbag" type="play" name="bag_play" args="--clock $(arg bag_file)" output="screen" />

</launch>
